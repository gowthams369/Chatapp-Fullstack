generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  password   String
  email      String   @unique
  profilePic String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sendMessage   Message[] @relation("SentMessages")
  reciveMessage Message[] @relation("ReciveMessages")
}

model Message {
  id        Int      @id @default(autoincrement())
  senderId  Int
  reciverId Int
  text      String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sender  User @relation("SentMessages", fields: [senderId], references: [id])
  reciver User @relation("ReciveMessages", fields: [reciverId], references: [id])
}
